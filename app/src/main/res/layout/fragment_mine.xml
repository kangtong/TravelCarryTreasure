<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/page_bg">

  <ImageView android:id="@+id/img_mine_banner"
      android:layout_width="match_parent" android:layout_height="220dp"
      android:src="@drawable/temp_mine_banner" android:scaleType="centerCrop"/>

  <com.dq.android.travelcarrytreasure.widget.CustomToolBar
      android:layout_width="match_parent" android:layout_height="wrap_content"
      app:toolbarTitle="我的旅行" app:titleColor="@color/white"
      app:isTransparent="true"/>

  <!-- 头像 + 等级 -->
  <RelativeLayout android:id="@+id/rl_avatar"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_alignBottom="@id/img_mine_banner" android:layout_marginLeft="30dp"
      android:layout_marginBottom="10dp">
    <support.ui.widget.CircleImageView android:id="@+id/iv_avatar"
        android:layout_width="70dp" android:layout_height="70dp"
        android:src="@drawable/temp_avatar"/>
    <TextView android:id="@+id/tv_user_level"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="LV 1" android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_user_level"
        android:layout_below="@id/iv_avatar" android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
  </RelativeLayout>

  <!-- 昵称 + 常居地 -->
  <RelativeLayout
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_alignTop="@id/rl_avatar" android:layout_alignBottom="@id/rl_avatar"
      android:layout_toRightOf="@id/rl_avatar"
      android:layout_marginLeft="30dp" android:gravity="center">
    <TextView android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="暗影飞客" android:textColor="@color/white"
        android:textSize="16sp"/>
    <TextView android:id="@+id/tv_residence"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick_name" android:layout_marginTop="10dp"
        android:text="居住地：西安" android:textColor="@color/white"/>
    <TextView android:id="@+id/tv_modify"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick_name" android:layout_toRightOf="@id/tv_residence"
        android:layout_marginTop="10dp" android:layout_marginLeft="10dp"
        android:text="修改" android:textColor="@color/white"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_location_modify" android:drawablePadding="5dp"/>
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent" android:layout_height="120dp"
      android:orientation="vertical"
      android:layout_marginTop="10dp" android:layout_below="@id/img_mine_banner"
      android:background="@color/white">
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp">
      <TextView
          android:layout_width="wrap_content" android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:gravity="center"
          android:text="我的足迹地图" android:textColor="@color/black" android:textSize="18sp"/>
      <TextView
          android:layout_width="0dp" android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginLeft="10dp"
          android:gravity="left|center_vertical"
          android:text="我打败了0%的驴友"/>
      <ImageView
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_marginLeft="10dp" android:layout_marginRight="20dp"
          android:src="@drawable/ic_arrow_right" android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent" android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="70dp">


    </LinearLayout>

  </LinearLayout>

</RelativeLayout>