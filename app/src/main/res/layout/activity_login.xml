<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_login" android:orientation="vertical">

  <com.dq.android.travelcarrytreasure.widget.CustomToolBar
      android:layout_width="match_parent" android:layout_height="wrap_content"
      app:toolbarTitle="登录" app:isTransparent="true"/>

  <ImageView android:layout_width="100dp" android:layout_height="100dp"
      android:src="@drawable/ic_logo"
      android:layout_gravity="center" android:layout_marginTop="40dp"/>

  <RelativeLayout android:id="@+id/rl_user_name"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
      android:layout_marginTop="50dp">
    <TextView android:id="@+id/tv_user_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="账号:" android:textColor="@color/black" android:textSize="16sp"
        android:layout_centerVertical="true"/>
    <EditText android:id="@+id/edt_user_name"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_user_name" android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:hint="请输入用户名" android:textSize="16sp"/>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
        android:layout_alignParentBottom="true" android:background="@color/divider"/>
  </RelativeLayout>

  <RelativeLayout android:id="@+id/rl_password"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
    <TextView android:id="@+id/tv_password"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="密码:" android:textColor="@color/black" android:textSize="16sp"
        android:layout_centerVertical="true"/>
    <EditText android:id="@+id/edt_password"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_password" android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@null" android:inputType="textPassword"
        android:hint="6~16位字符" android:textSize="16sp"
        android:maxLength="16"/>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
        android:layout_alignParentBottom="true" android:background="@color/divider"/>
  </RelativeLayout>

  <RelativeLayout android:id="@+id/rl_password_again"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
    <TextView android:id="@+id/tv_password_again"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="确认密码:" android:textColor="@color/black" android:textSize="16sp"
        android:layout_centerVertical="true"/>
    <EditText android:id="@+id/edt_password_again"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_password_again" android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@null" android:inputType="textPassword"
        android:hint="6~16位字符" android:textSize="16sp"
        android:maxLength="16"/>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
        android:layout_alignParentBottom="true" android:background="@color/divider"/>
  </RelativeLayout>

  <Button android:id="@+id/btn_login"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
      android:text="登录" android:textSize="18sp"
      android:textColor="@drawable/selector_btn_login_tv"
      android:foreground="?android:attr/selectableItemBackground"
      android:background="@drawable/selector_btn_login_bg"/>

  <Button android:id="@+id/btn_register"
      android:layout_width="match_parent" android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
      android:text="注册" android:textSize="18sp"
      android:textColor="@drawable/selector_btn_login_tv"
      android:foreground="?android:attr/selectableItemBackground"
      android:background="@drawable/selector_btn_login_bg"/>

  <RelativeLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:layout_margin="15dp">
    <TextView android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="忘记密码?" android:textColor="@drawable/selector_login_tv_color"/>

    <TextView android:id="@+id/tv_login_without_pwd"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="短信验证码登录~" android:textColor="@drawable/selector_login_tv_color"/>
  </RelativeLayout>

</LinearLayout>