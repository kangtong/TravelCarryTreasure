<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

  <!-- 上方栏目名 -->
  <RelativeLayout android:id="@+id/linear_title"
      android:layout_width="match_parent" android:layout_height="50dp">

    <com.wx.ovalimageview.RoundImageView android:id="@+id/img_title"
        android:layout_width="25dp" android:layout_height="25dp"
        android:src="@drawable/discover_title_theme"
        android:layout_centerVertical="true" android:layout_marginLeft="16dp"/>

    <TextView android:id="@+id/tv_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_title"
        android:text="本季热门" android:textColor="@android:color/black"
        android:layout_marginTop="8dp" android:layout_marginLeft="16dp"/>

    <TextView android:id="@+id/tv_title_sub"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_title" android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:text="04月最热门的地方" android:textColor="@android:color/holo_orange_light"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/public_icon_next_normal"
        android:layout_alignParentRight="true" android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>

  </RelativeLayout>

  <View android:layout_width="match_parent" android:layout_height="1dp"
      android:background="@color/gray_btn_bg_color"/>

  <!-- 中间多张图 : 此模板3张图 -->
  <LinearLayout android:id="@+id/linear_content"
      android:layout_width="match_parent" android:layout_height="125dp"
      android:orientation="horizontal"
      android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1" android:orientation="vertical">

      <ImageView android:id="@+id/img_content_1"
          android:layout_width="match_parent" android:layout_height="75dp"
          android:src="@drawable/temp_luoyang"/>

      <TextView android:id="@+id/tv_content_1"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="洛阳" android:textColor="@android:color/black"
          android:layout_marginTop="5dp"/>

      <TextView android:id="@+id/tv_content_sub_1"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="千年帝都，华夏圣城" android:textSize="10sp"
          android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1" android:orientation="vertical"
        android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

      <ImageView android:id="@+id/img_content_2"
          android:layout_width="match_parent" android:layout_height="75dp"
          android:src="@drawable/temp_dalian"/>

      <TextView android:id="@+id/tv_content_2"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="大连" android:textColor="@android:color/black"
          android:layout_marginTop="5dp"/>

      <TextView android:id="@+id/tv_content_sub_2"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="金色沙滩，浪漫之地" android:textSize="10sp"
          android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1" android:orientation="vertical">

      <ImageView android:id="@+id/img_content_3"
          android:layout_width="match_parent" android:layout_height="75dp"
          android:src="@drawable/temp_beihai"/>

      <TextView android:id="@+id/tv_content_3"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="北海" android:textColor="@android:color/black"
          android:layout_marginTop="5dp"/>

      <TextView android:id="@+id/tv_content_sub_3"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="一海一岛一沉迷" android:textSize="10sp"
          android:layout_marginTop="5dp"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>