<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white" android:orientation="vertical">

  <com.dq.android.travelcarrytreasure.widget.CustomToolBar android:id="@+id/tool_bar"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      app:toolbarTitle="意见反馈" app:isShowLeftImg="true"
      app:rightTxt="提交" app:isShowRight="true"/>

  <ImageView
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:src="@drawable/bg_feedback"/>

  <com.rengwuxian.materialedittext.MaterialEditText android:id="@+id/edt_feedback"
      android:layout_width="match_parent" android:layout_height="200dp"
      android:gravity="left" android:layout_margin="15dp"
      app:met_baseColor="#0056d3" app:met_primaryColor="#982360" app:met_errorColor="#ddaa00"
      app:met_maxCharacters="100" android:maxLength="140"
      android:hint="最多140字哦~" android:textSize="14sp"/>

</LinearLayout>