<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white" android:orientation="vertical">

  <com.dq.android.travelcarrytreasure.widget.CustomToolBar android:id="@+id/tool_bar"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      app:toolbarTitle="关于" app:isShowLeftImg="true"/>

  <ImageView
      android:layout_width="70dp" android:layout_height="70dp"
      android:src="@drawable/ic_logo"
      android:layout_gravity="center" android:layout_marginTop="100dp"/>

  <TextView
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_gravity="center" android:layout_marginTop="20dp"
      android:text="旅游随身宝"
      android:textColor="@color/black" android:textSize="18sp"/>

  <TextView android:id="@+id/tv_star"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_marginTop="20dp" android:layout_gravity="center" android:gravity="center"
      android:text="© 2017 github.com/DQSecret, all rights reserved\n版本：1.0.1"
      android:textSize="12sp"/>

</LinearLayout>